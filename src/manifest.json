{
  "manifest_version": 2,
  "name": "GroupMe",
  "version": "0.1",
  "description": "Intelligent Google Groups account switching.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "page_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "GroupMe"
  },

  "author": "Michael Giuffrida",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://groups.google.com/"
  ],
  "short_name": "GroupMe"
}
